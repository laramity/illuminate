{
    "name": "miserenkov/illuminate",
    "description": "Yii2 to Laravel Migration Package",
    "license": "BSD-3-Clause",
    "keywords": [
        "yii2",
        "laravel",
        "illuminate",
        "migration",
        "switch"
    ],
    "authors": [
        {
            "name": "Paul Klimov",
            "email": "klimov.paul@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/yii2tech/illuminate/issues",
        "wiki": "https://github.com/yii2tech/illuminate/wiki",
        "source": "https://github.com/yii2tech/illuminate"
    },
    "require": {
        "php": "^7.4|^8.0",
        "ext-pdo": "*",
        "illuminate/console": "^8.0 || ^9.0 || ^10.0",
        "illuminate/http": "^8.0 || ^9.0 || ^10.0",
        "illuminatech/array-factory": "^1.2.4",
        "yiisoft/yii2": "~2.0.14"
    },
    "require-dev": {
        "enlightn/security-checker": "^1.10",
        "ergebnis/composer-normalize": "^2.28",
        "friendsofphp/php-cs-fixer": "^3.10",
        "illuminate/auth": "*",
        "illuminate/cache": "*",
        "illuminate/config": "*",
        "illuminate/database": "*",
        "illuminate/events": "*",
        "illuminate/hashing": "*",
        "illuminate/log": "*",
        "illuminate/translation": "*",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpro/grumphp": "^1.13",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^7.5 || ^8.0 || ^9.3 || ^10.0.7"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "Yii2tech\\Illuminate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii2tech\\Illuminate\\Test\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "ergebnis/composer-normalize": true,
            "phpro/grumphp": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laravel": {
            "providers": [
                "Yii2tech\\Illuminate\\YiiIlluminateServiceProvider"
            ]
        }
    }
}
